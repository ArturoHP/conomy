<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:padding="10dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/almostWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/transaction_icon_item"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="8"
            android:weightSum="10"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/transaction_name_item"
                android:gravity="center|right"
                android:fontFamily="@font/comfortaa"
                android:text="Nombre de transacciÃ³n"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"/>

            <TextView
                android:autoSizeTextType="uniform"
                android:id="@+id/transaction_amount_item"
                android:gravity="center|right"
                android:fontFamily="@font/comfortaa"
                android:text="monto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/transaction_key_item"
                android:gravity="center|right"
                android:fontFamily="@font/comfortaa"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>